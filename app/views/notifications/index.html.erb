<h1 class="ui center aligned header"><span><i class="mail icon"></i></span> Benachrichtigungen</h1>
<div class="ui container">
  <div class="ui basic segment">

    <table class="ui compact celled definition table">
      <thead>
        <tr>
          <th></th>
          <th>Name</th>
          <th>Sensor IDs (Link auf Karte)</th>
          <th>Auswertung</th>
          <th>löschen</th>
        </tr>
      </thead>
      <tbody>
        <% @notifications.each do |n| %>
        <tr>
          <td class="collapsing">
            <%= best_in_place n,
                :enabled, as: :checkbox,
                collection: {
                    false: "aus",
                    true: "aktiv"}, class: 'highlight_on_success' %>
          </td>
          <td><%= best_in_place n,
                :name, :as => :input, class: 'highlight_on_success' %></td>
          <td><%= n.sensors.map(&:extern_db_id) %></td>
          <td>...</td>
          <td><%= link_to 'löschen', notification_path(n.id), method: :delete, data: { confirm: 'Die Sensorbenachrichtigung wirklich löschen?' } %></td>
        </tr>
        <% end %>
      </tbody>
      <tfoot class="full-width">
        <tr>
          <th></th>
          <th colspan="4">
            Beachte das wir in der Beta Phase sind...
          </th>
        </tr>
      </tfoot>
    </table>
    <%= link_to 'Neuen Sensoralarm anlegen', sensors_path, class: "ui button" %>
  </div>
</div>

<script type="text/javascript">
  $(".best_in_place").best_in_place();

</script>
