<div class="ui container">
  <div class="ui basic segments">
    <div class="panel panel-default panel-boundary">
      <div class="panel-heading">
        <h2><%= t('.sign_up', :default => 'Sign up') %></h2>
      </div>
      <div class="ui form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: "form" }) do |f| %>
            <%= devise_bootstrap_error_messages! %>
            <div class="field">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, class: "form-control" %>
            </div>
            <div class="field">
              <%= f.label :password %>
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
              <% if @minimum_password_length %>
                  <small class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</small>
              <% end %>
            </div>
            <div class="field">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control"%>
            </div>
            <%= f.submit  t('.sign_up', :default => "Sign up"), class: "ui primary basic button" %>
        <%end%>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>